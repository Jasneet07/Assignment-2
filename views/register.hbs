<div>
  <div class="root-login">
    <span>{{title}}</span>
  </div>
  <div class="inputs-login">
    <div class="root-input">
      <h2>Register</h2>
        {{> messages}}
      <form id="form" action="/register" method="POST">
        <div class="form-group mb-2">
          <label for="exampleInputEmail1"><b>Email Address</b></label>
          <input
            type="text"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            name="email"
            value="{{email}}"
          />
          <small id="emailHelp" class="form-text text-muted">We will keep your
            email secure</small>
        </div>
        <div class="form-group mb-2">
          <label for="exampleInputEmail1"><b>Password</b></label>
          <input
            type="password"
            class="form-control"
            id="password"
            aria-describedby="emailHelp"
            name="password"
            value="{{password}}"
          />
        </div>
        <div class="form-group mb-2">
          <label for="exampleInputEmail1"><b>Confirm Password</b></label>
          <input
            type="password"
            class="form-control"
            id="cpassword"
            aria-describedby="emailHelp"
            name="cpassword"
            value="{{cpassword}}"
          />
        </div>
        <div>
              <b>Login As:</b>
              <div class="form-group form-check">
                <input type="radio" class="form-check-input" id="exampleCheck1" value="employer" name = "registerAs"/>
                <label class="form-check-label" for="exampleCheck1">Employer</label>
              </div>
              <div class="form-group form-check">
                <input type="radio" class="form-check-input" id="exampleCheck1" value="employee" name = "registerAs"/>
                <label class="form-check-label" for="exampleCheck1">Employee</label>
              </div>
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
      <a href="/login">Login</a>
    </div>
  </div>
</div>