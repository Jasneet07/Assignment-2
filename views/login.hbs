<div>
  <div class="root-login">
    <span>{{title}}</span>
  </div>
  <div class="inputs-login">
    <div class="root-input">
      <h2>Login</h2>
      {{> messages}}
      <form id="form" action="/login" method="POST">
        <div class="form-group mb-2">
          <label for="exampleInputEmail1"><b>Email Address</b></label>
          <input
            type="text"
            class="form-control"
            id="email"
            aria-describedby="emailHelp"
            name="email"
            value="{{email}}"
          />
          <small id="emailHelp" class="form-text text-muted">We will keep your
            email secure</small>
        </div>
        <div class="form-group mb-2">
          <label for="exampleInputEmail1"><b>Password</b></label>
          <input
            type="password"
            class="form-control"
            id="password"
            aria-describedby="emailHelp"
            name="password"
            value="{{password}}"
          />
        </div>
        <button type="submit" class="btn btn-primary mt-4">Submit</button>
      </form>
      <a href="/register">Register</a>
    </div>
  </div>
</div>