<div class="container contact-container">
    <form action="/employee/edit_details/{{id}}" method="POST">
        <div class="form-group mb-4">
            <label for="title"><b>Full Name</b></label>
            <input
            type="text"
            class="form-control"
            id="name"
            name="full_name"
            placeholder="Full Name"
            value = "{{full_name}}"
            />
        </div>
        <div class="form-group mb-4">
            <label for="title"><b>Email</b></label>
            <input
            type="text"
            class="form-control"
            id="email"
            name="email"
            placeholder="Email"
            value = "{{email}}"
            disabled
            />
        </div>
        <div class="form-group mb-4">
            <label for="title"><b>Date of birth</b></label>
            <input
            type="text"
            class="form-control"
            id="dob"
            name="dob"
            placeholder="Date of birth"
            value = "{{dob}}"
            />
        </div>
        <div class="form-group mb-4">
            <label for="title"><b>Phone Number</b></label>
            <input
            type="text"
            class="form-control"
            id="phone_number"
            name="phone_number"
            placeholder="Phone Number"
            value = "{{phone_number}}"
            />
        </div>
        <div class="form-group mb-4">
            <label for="title"><b>Highest Degree</b></label>
            <input
            type="text"
            class="form-control"
            id="highest_degree"
            name="highest_degree"
            placeholder="Highest Degree"
            value = "{{highest_degree}}"
            />
        </div>
         <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>